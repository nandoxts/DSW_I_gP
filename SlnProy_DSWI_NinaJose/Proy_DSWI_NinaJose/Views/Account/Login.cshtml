@model Proy_DSWI_NinaJose.Models.ViewModels.Login
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div id="loginValidation" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </div>
    <div class="text-center mt-2">
        ¿No tienes cuenta?
        <button type="button" class="btn btn-link p-0" onclick="showRegisterModal()">Regístrate</button>
    </div>
</form>
