@{
    ViewData["Title"] = "Panel de Administración";
    Layout = "_Layout";
}

<style>
    /* Variables coherentes con el Layout */
    :root {
        --primary: #4f46e5;
        --primary-hover: #4338ca;
        --primary-light: #eef2ff;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #3b82f6;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-700: #374151;
        --gray-900: #111827;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
    }

    /* Header del Admin */
    .admin-header {
        background: linear-gradient(135deg, var(--primary) 0%, #7c3aed 100%);
        color: white;
        padding: 2rem 2.5rem;
        border-radius: var(--radius-xl);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .admin-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .admin-header::after {
        content: '';
        position: absolute;
        bottom: -30%;
        right: 10%;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }

    .admin-header h1 {
        margin: 0;
        font-size: 1.875rem;
        font-weight: 700;
        letter-spacing: -0.025em;
        position: relative;
        z-index: 1;
    }

    .admin-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
        position: relative;
        z-index: 1;
    }

    /* Enlaces rápidos */
    .quick-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .quick-link {
        background: #fff;
        padding: 1.5rem 1.25rem;
        border-radius: var(--radius-lg);
        text-decoration: none;
        color: var(--gray-700);
        box-shadow: var(--shadow);
        transition: all 0.2s ease;
        text-align: center;
        border: 1px solid var(--gray-100);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
    }

    .quick-link:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
        color: var(--primary);
        border-color: var(--primary-light);
    }

    .quick-link-icon {
        width: 48px;
        height: 48px;
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: all 0.2s ease;
    }

    .quick-link:nth-child(1) .quick-link-icon {
        background: linear-gradient(135deg, #eef2ff, #e0e7ff);
        color: var(--primary);
    }

    .quick-link:nth-child(2) .quick-link-icon {
        background: linear-gradient(135deg, #fdf4ff, #f3e8ff);
        color: #a855f7;
    }

    .quick-link:nth-child(3) .quick-link-icon {
        background: linear-gradient(135deg, #eff6ff, #dbeafe);
        color: var(--info);
    }

    .quick-link:nth-child(4) .quick-link-icon {
        background: linear-gradient(135deg, #ecfdf5, #d1fae5);
        color: var(--success);
    }

    .quick-link span {
        font-weight: 500;
        font-size: 0.9rem;
    }

    /* Tarjetas de estadísticas */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.25rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: #fff;
        padding: 1.5rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--gray-100);
        transition: all 0.2s ease;
        position: relative;
        overflow: hidden;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
    }

    .stat-card.usuarios::before { background: linear-gradient(90deg, var(--primary), #818cf8); }
    .stat-card.productos::before { background: linear-gradient(90deg, #a855f7, #d946ef); }
    .stat-card.ordenes::before { background: linear-gradient(90deg, var(--info), #38bdf8); }
    .stat-card.ventas::before { background: linear-gradient(90deg, var(--success), #34d399); }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .stat-label {
        color: var(--gray-500);
        font-size: 0.85rem;
        font-weight: 500;
    }

    .stat-icon-wrapper {
        width: 40px;
        height: 40px;
        border-radius: var(--radius);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }

    .stat-card.usuarios .stat-icon-wrapper {
        background: var(--primary-light);
        color: var(--primary);
    }

    .stat-card.productos .stat-icon-wrapper {
        background: #faf5ff;
        color: #a855f7;
    }

    .stat-card.ordenes .stat-icon-wrapper {
        background: #eff6ff;
        color: var(--info);
    }

    .stat-card.ventas .stat-icon-wrapper {
        background: #ecfdf5;
        color: var(--success);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: var(--gray-900);
        line-height: 1;
        letter-spacing: -0.025em;
    }

    .stat-trend {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.75rem;
        font-weight: 500;
        margin-top: 0.5rem;
        padding: 0.25rem 0.5rem;
        border-radius: 9999px;
    }

    .stat-trend.up {
        background: #ecfdf5;
        color: var(--success);
    }

    .stat-trend.down {
        background: #fef2f2;
        color: var(--danger);
    }

    /* Secciones */
    .section-card {
        background: #fff;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--gray-100);
        margin-bottom: 1.5rem;
        overflow: hidden;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid var(--gray-100);
    }

    .section-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--gray-900);
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .section-title i {
        color: var(--primary);
    }

    .section-link {
        font-size: 0.85rem;
        color: var(--primary);
        text-decoration: none;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        transition: color 0.15s;
    }

    .section-link:hover {
        color: var(--primary-hover);
    }

    /* Tablas */
    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        margin: 0;
        width: 100%;
    }

    .table thead th {
        background: var(--gray-50);
        border: none;
        padding: 0.875rem 1.5rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--gray-500);
    }

    .table tbody td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
        border-bottom: 1px solid var(--gray-100);
        font-size: 0.9rem;
        color: var(--gray-700);
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .table tbody tr {
        transition: background 0.15s ease;
    }

    .table tbody tr:hover {
        background: var(--gray-50);
    }

    .order-id {
        font-weight: 600;
        color: var(--gray-900);
    }

    .user-cell {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar-sm {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, var(--primary), #7c3aed);
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.75rem;
    }

    .amount {
        font-weight: 600;
        color: var(--gray-900);
    }

    /* Badges */
    .badge-status {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-status.completada {
        background: #ecfdf5;
        color: #059669;
    }

    .badge-status.pendiente {
        background: #fffbeb;
        color: #d97706;
    }

    .badge-status.cancelada {
        background: #fef2f2;
        color: #dc2626;
    }

    .badge-status i {
        font-size: 0.5rem;
    }

    /* Botones */
    .btn-action {
        padding: 0.4rem 0.875rem;
        font-size: 0.8rem;
        font-weight: 500;
        border-radius: var(--radius);
        border: 1px solid var(--gray-200);
        background: #fff;
        color: var(--gray-700);
        transition: all 0.15s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        text-decoration: none;
    }

    .btn-action:hover {
        background: var(--primary);
        border-color: var(--primary);
        color: #fff;
    }

    /* Productos populares */
    .product-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .product-icon {
        width: 36px;
        height: 36px;
        background: var(--gray-100);
        border-radius: var(--radius);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--gray-500);
    }

    .product-name {
        font-weight: 500;
        color: var(--gray-900);
    }

    .product-qty {
        background: var(--primary-light);
        color: var(--primary);
        padding: 0.35rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    /* Empty state */
    .empty-state {
        padding: 3rem 1.5rem;
        text-align: center;
        color: var(--gray-400);
    }

    .empty-state i {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    .empty-state p {
        margin: 0;
        font-size: 0.9rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .admin-header {
            padding: 1.5rem;
        }

        .admin-header h1 {
            font-size: 1.5rem;
        }

        .stat-number {
            font-size: 1.5rem;
        }

        .table thead th,
        .table tbody td {
            padding: 0.75rem 1rem;
        }
    }
</style>

<div class="admin-header">
    <h1>Panel de Administración</h1>
    <p>Bienvenido de nuevo, <strong>@User.Identity?.Name</strong></p>
</div>

<!-- Enlaces rápidos -->
<div class="quick-links">
    <a href="@Url.Action("IndexUsuario", "Usuario")" class="quick-link">
        <div class="quick-link-icon">
            <i class="bi bi-people-fill"></i>
        </div>
        <span>Gestionar Usuarios</span>
    </a>
    <a href="@Url.Action("IndexProductos", "Producto")" class="quick-link">
        <div class="quick-link-icon">
            <i class="bi bi-box-seam-fill"></i>
        </div>
        <span>Productos</span>
    </a>
    <a href="@Url.Action("IndexOrdenesAdmin", "Orden")" class="quick-link">
        <div class="quick-link-icon">
            <i class="bi bi-receipt"></i>
        </div>
        <span>Todas las Órdenes</span>
    </a>
    <a href="@Url.Action("CreateProducto", "Producto")" class="quick-link">
        <div class="quick-link-icon">
            <i class="bi bi-plus-lg"></i>
        </div>
        <span>Nuevo Producto</span>
    </a>
</div>

<!-- Estadísticas -->
<div class="stats-grid">
    <div class="stat-card usuarios">
        <div class="stat-header">
            <div class="stat-label">Total de Usuarios</div>
            <div class="stat-icon-wrapper">
                <i class="bi bi-people"></i>
            </div>
        </div>
        <div class="stat-number">@ViewBag.TotalUsuarios</div>
        <div class="stat-trend up">
            <i class="bi bi-arrow-up"></i> Activos
        </div>
    </div>
    <div class="stat-card productos">
        <div class="stat-header">
            <div class="stat-label">Total de Productos</div>
            <div class="stat-icon-wrapper">
                <i class="bi bi-box"></i>
            </div>
        </div>
        <div class="stat-number">@ViewBag.TotalProductos</div>
        <div class="stat-trend up">
            <i class="bi bi-check-circle"></i> En catálogo
        </div>
    </div>
    <div class="stat-card ordenes">
        <div class="stat-header">
            <div class="stat-label">Total de Órdenes</div>
            <div class="stat-icon-wrapper">
                <i class="bi bi-receipt"></i>
            </div>
        </div>
        <div class="stat-number">@ViewBag.TotalOrdenes</div>
        <div class="stat-trend up">
            <i class="bi bi-graph-up"></i> Procesadas
        </div>
    </div>
    <div class="stat-card ventas">
        <div class="stat-header">
            <div class="stat-label">Ventas del Mes</div>
            <div class="stat-icon-wrapper">
                <i class="bi bi-currency-dollar"></i>
            </div>
        </div>
        <div class="stat-number">S/ @String.Format("{0:N2}", ViewBag.VentasMes)</div>
        <div class="stat-trend up">
            <i class="bi bi-arrow-up"></i> Este mes
        </div>
    </div>
</div>

<!-- Grid de dos columnas para tablas -->
<div class="row">
    <!-- Últimas órdenes -->
    <div class="col-lg-8">
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="bi bi-clock-history"></i> Últimas Órdenes
                </h2>
                <a href="@Url.Action("IndexOrdenesAdmin", "Orden")" class="section-link">
                    Ver todas <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            @if (ViewBag.UltimasOrdenes != null && ViewBag.UltimasOrdenes.Count > 0)
            {
                <div class="table-wrapper">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Orden</th>
                                <th>Cliente</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var orden in ViewBag.UltimasOrdenes)
                            {
                                string inicial = orden.Usuario?.Nombre?.Length > 0 ? orden.Usuario.Nombre.Substring(0, 1).ToUpper() : "?";
                                <tr>
                                    <td><span class="order-id">#@orden.IdOrden</span></td>
                                    <td>
                                        <div class="user-cell">
                                            <div class="user-avatar-sm">@inicial</div>
                                            <span>@orden.Usuario?.Nombre</span>
                                        </div>
                                    </td>
                                    <td>@orden.Fecha.ToString("dd MMM, HH:mm")</td>
                                    <td><span class="amount">S/ @orden.Total.ToString("F2")</span></td>
                                    <td>
                                        @{
                                            var estadoRaw = (orden.Estado ?? string.Empty).Trim();
                                            var estadoKey = estadoRaw.ToLowerInvariant();
                                            var badgeClass = "";
                                            if (estadoKey == "completada" || estadoKey == "completado") badgeClass = "completada";
                                            else if (estadoKey == "pendiente") badgeClass = "pendiente";
                                            else if (estadoKey == "cancelada" || estadoKey == "cancelado") badgeClass = "cancelada";
                                            else badgeClass = "pendiente"; // fallback
                                        }
                                        <span class="badge-status @badgeClass">
                                            <i class="bi bi-circle-fill"></i> @(!string.IsNullOrEmpty(estadoRaw) ? estadoRaw : "Pendiente")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("DetailsMyOrder", "Orden", new { id = orden.IdOrden })" class="btn-action">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inbox"></i>
                    <p>No hay órdenes registradas aún</p>
                </div>
            }
        </div>
    </div>

    <!-- Productos más vendidos -->
    <div class="col-lg-4">
        <div class="section-card">
            <div class="section-header">
                <h2 class="section-title">
                    <i class="bi bi-trophy"></i> Más Vendidos
                </h2>
            </div>
            @if (ViewBag.ProductosPopulares != null && ViewBag.ProductosPopulares.Count > 0)
            {
                <div class="table-wrapper">
                    <table class="table">
                        <tbody>
                            @foreach (var producto in ViewBag.ProductosPopulares)
                            {
                                <tr>
                                    <td>
                                        <div class="product-row">
                                            <div class="product-info">
                                                <div class="product-icon">
                                                    <i class="bi bi-box"></i>
                                                </div>
                                                <span class="product-name">@producto.Producto</span>
                                            </div>
                                            <span class="product-qty">@producto.Cantidad uds</span>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-graph-down"></i>
                    <p>Sin datos de ventas aún</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log('Dashboard cargado correctamente');
    </script>
}