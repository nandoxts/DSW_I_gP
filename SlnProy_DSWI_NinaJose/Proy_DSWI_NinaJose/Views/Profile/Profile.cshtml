@model Proy_DSWI_NinaJose.Models.Usuario

<div class="card border-0">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <label class="form-label fw-bold me-2 mb-0">Nombre</label>
            <p class="form-control-plaintext mb-0">@Model.Nombre</p>

            @if (Model.Rol == "Admin")
            {
                <i class="bi bi-shield-lock-fill text-danger ms-3 fs-2"
                   role="button"
                   data-bs-toggle="popover"
                   data-bs-trigger="click"
                   data-bs-placement="top"
                   data-bs-content="Administrador">
                </i>
            }
            else if (Model.Rol == "Cliente")
            {
                <i class="bi bi-person-fill text-primary ms-3 fs-2"
                   role="button"
                   data-bs-toggle="popover"
                   data-bs-trigger="click"
                   data-bs-placement="top"
                   data-bs-content="Cliente">
                </i>
            }
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <p class="form-control-plaintext">@Model.Email</p>
        </div>
    </div>
</div>
