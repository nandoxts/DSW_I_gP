@model Proy_DSWI_NinaJose.Models.ViewModels.OrderConfirmation

@{
    ViewData["Title"] = "Orden Procesada";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="alert alert-success">
        <h4 class="alert-heading">Estimado cliente, su orden fue procesada</h4>
        <p>Los detalles son los siguientes:</p>

        <ul>
            <li><strong>Nombre:</strong> @Model.NombreCliente</li>
            <li><strong>Email:</strong> @Model.EmailCliente</li>
        </ul>

        <h5>Productos:</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-end">Precio unitario</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td class="text-center">@item.Cantidad</td>
                        <td class="text-end">S/ @item.PrecioUnitario.ToString("F2")</td>
                        <td class="text-end">S/ @item.Subtotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Monto total:</th>
                    <th class="text-end">S/ @Model.MontoTotal.ToString("F2")</th>
                </tr>
            </tfoot>
        </table>

        <hr />
        <p>¡Gracias por su compra!</p>
        <a asp-controller="Producto" asp-action="IndexProductos" class="btn btn-primary">
            Volver al catálogo
        </a>
    </div>
</div>
