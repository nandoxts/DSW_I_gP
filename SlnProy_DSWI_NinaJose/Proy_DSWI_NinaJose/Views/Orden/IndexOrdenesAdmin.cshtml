@model List<Proy_DSWI_NinaJose.Models.Orden>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Todas las Órdenes";
    Layout = "_Layout";
}

<style>
    :root {
        --primary: #4f46e5;
        --primary-hover: #4338ca;
        --primary-light: #eef2ff;
        --success: #10b981;
        --success-light: #ecfdf5;
        --warning: #f59e0b;
        --warning-light: #fffbeb;
        --danger: #ef4444;
        --danger-light: #fef2f2;
        --info: #3b82f6;
        --info-light: #eff6ff;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-400: #9ca3af;
        --gray-500: #6b7280;
        --gray-700: #374151;
        --gray-900: #111827;
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
    }

    /* Alert Toast Messages */
    .alert-toast {
        position: fixed;
        top: 90px;
        right: 24px;
        max-width: 450px;
        padding: 1rem 1.25rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-lg);
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        z-index: 9999;
        animation: slideIn 0.3s ease;
        border-left: 4px solid;
        background: #fff;
    }

    .alert-toast.success {
        border-left-color: var(--success);
    }

    .alert-toast.error {
        border-left-color: var(--danger);
    }

    .alert-toast.hiding {
        animation: slideOut 0.3s ease forwards;
    }

    .alert-toast-icon {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1rem;
    }

    .alert-toast.success .alert-toast-icon {
        background: var(--success-light);
        color: var(--success);
    }

    .alert-toast.error .alert-toast-icon {
        background: var(--danger-light);
        color: var(--danger);
    }

    .alert-toast-content {
        flex: 1;
    }

    .alert-toast-title {
        font-weight: 600;
        color: var(--gray-900);
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .alert-toast-message {
        color: var(--gray-600);
        font-size: 0.85rem;
        line-height: 1.4;
    }

    .alert-toast-close {
        background: none;
        border: none;
        color: var(--gray-400);
        cursor: pointer;
        padding: 0.25rem;
        margin: -0.25rem -0.25rem 0 0;
        border-radius: var(--radius);
        transition: all 0.15s;
    }

    .alert-toast-close:hover {
        background: var(--gray-100);
        color: var(--gray-600);
    }

    @@keyframes slideIn {
        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes slideOut {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(100%);
            opacity: 0;
        }
    }

    /* Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-900);
        letter-spacing: -0.025em;
    }

    .page-title-icon {
        width: 42px;
        height: 42px;
        background: linear-gradient(135deg, var(--primary), #7c3aed);
        border-radius: var(--radius-lg);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.25rem;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.6rem 1.25rem;
        background: #fff;
        border: 1px solid var(--gray-200);
        border-radius: var(--radius);
        color: var(--gray-700);
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.15s ease;
    }

    .btn-back:hover {
        background: var(--gray-50);
        border-color: var(--gray-300);
        color: var(--gray-900);
    }

    /* Stats Row */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .stat-badge {
        background: #fff;
        padding: 1rem 1.25rem;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--gray-100);
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .stat-badge-label {
        font-size: 0.8rem;
        font-weight: 500;
        color: var(--gray-500);
        text-transform: uppercase;
        letter-spacing: 0.025em;
    }

    .stat-badge-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-900);
        letter-spacing: -0.025em;
    }

    .stat-badge.total .stat-badge-value { color: var(--primary); }
    .stat-badge.completadas .stat-badge-value { color: var(--success); }
    .stat-badge.pendientes .stat-badge-value { color: var(--warning); }
    .stat-badge.ingresos .stat-badge-value { color: #7c3aed; }

    /* Table Card */
    .table-card {
        background: #fff;
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow);
        border: 1px solid var(--gray-100);
        overflow: hidden;
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid var(--gray-100);
        background: var(--gray-50);
    }

    .table-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--gray-700);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .table-title i {
        color: var(--primary);
    }

    .search-box {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #fff;
        border: 1px solid var(--gray-200);
        border-radius: var(--radius);
        padding: 0.4rem 0.75rem;
        transition: all 0.15s;
    }

    .search-box:focus-within {
        border-color: var(--primary);
        box-shadow: 0 0 0 3px var(--primary-light);
    }

    .search-box i {
        color: var(--gray-400);
    }

    .search-box input {
        border: none;
        outline: none;
        font-size: 0.85rem;
        width: 180px;
        color: var(--gray-700);
    }

    .search-box input::placeholder {
        color: var(--gray-400);
    }

    /* Table */
    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        margin: 0;
        width: 100%;
    }

    .table thead th {
        background: #fff;
        border: none;
        border-bottom: 2px solid var(--gray-100);
        padding: 0.875rem 1.25rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--gray-500);
        white-space: nowrap;
    }

    .table tbody td {
        padding: 1rem 1.25rem;
        vertical-align: middle;
        border-bottom: 1px solid var(--gray-100);
        font-size: 0.875rem;
        color: var(--gray-700);
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    .table tbody tr {
        transition: background 0.15s ease;
    }

    .table tbody tr:hover {
        background: var(--gray-50);
    }

    /* Cell styles */
    .order-id {
        font-weight: 700;
        color: var(--gray-900);
        font-size: 0.9rem;
    }

    .client-cell {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .client-avatar {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, var(--primary), #7c3aed);
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.8rem;
        flex-shrink: 0;
    }

    .client-info {
        display: flex;
        flex-direction: column;
    }

    .client-name {
        font-weight: 500;
        color: var(--gray-900);
    }

    .client-email {
        font-size: 0.8rem;
        color: var(--gray-500);
    }

    .date-cell {
        white-space: nowrap;
    }

    .date-primary {
        font-weight: 500;
        color: var(--gray-900);
    }

    .date-secondary {
        font-size: 0.8rem;
        color: var(--gray-500);
    }

    .amount {
        font-weight: 700;
        color: var(--gray-900);
        font-size: 0.95rem;
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.85rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .status-badge i {
        font-size: 0.45rem;
    }

    .status-completada {
        background: var(--success-light);
        color: #059669;
    }

    .status-pendiente {
        background: var(--warning-light);
        color: #d97706;
    }

    .status-cancelada {
        background: var(--danger-light);
        color: #dc2626;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.4rem 0.75rem;
        font-size: 0.8rem;
        font-weight: 500;
        border-radius: var(--radius);
        border: 1px solid transparent;
        transition: all 0.15s ease;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-view {
        background: var(--info-light);
        color: var(--info);
        border-color: var(--info-light);
    }

    .btn-view:hover {
        background: var(--info);
        color: #fff;
        border-color: var(--info);
    }

    .btn-confirm {
        background: var(--success-light);
        color: var(--success);
        border-color: var(--success-light);
    }

    .btn-confirm:hover {
        background: var(--success);
        color: #fff;
        border-color: var(--success);
    }

    .btn-confirm:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* Loading state */
    .btn-confirm.loading {
        pointer-events: none;
        opacity: 0.7;
    }

    .btn-confirm .btn-loading {
        display: none;
    }

    .btn-confirm.loading .btn-text {
        display: none;
    }

    .btn-confirm.loading .btn-loading {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
    }

    .spinner {
        width: 14px;
        height: 14px;
        border: 2px solid currentColor;
        border-right-color: transparent;
        border-radius: 50%;
        animation: spin 0.75s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        width: 80px;
        height: 80px;
        background: var(--gray-100);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
    }

    .empty-state-icon i {
        font-size: 2rem;
        color: var(--gray-400);
    }

    .empty-state h4 {
        color: var(--gray-900);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: var(--gray-500);
        font-size: 0.9rem;
        margin: 0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .alert-toast {
            left: 16px;
            right: 16px;
            max-width: none;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .table thead th,
        .table tbody td {
            padding: 0.75rem 1rem;
        }

        .client-cell {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.25rem;
        }

        .client-avatar {
            display: none;
        }

        .action-buttons {
            flex-direction: column;
            gap: 0.35rem;
        }
    }
</style>

<!-- Alert Toast Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert-toast success" id="successAlert">
        <div class="alert-toast-icon">
            <i class="bi bi-check-lg"></i>
        </div>
        <div class="alert-toast-content">
            <div class="alert-toast-title">¡Operación exitosa!</div>
            <div class="alert-toast-message">@TempData["Success"]</div>
        </div>
        <button class="alert-toast-close" onclick="closeAlert('successAlert')">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert-toast error" id="errorAlert">
        <div class="alert-toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="alert-toast-content">
            <div class="alert-toast-title">Error</div>
            <div class="alert-toast-message">@TempData["Error"]</div>
        </div>
        <button class="alert-toast-close" onclick="closeAlert('errorAlert')">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
}

<div class="page-header">
    <h1 class="page-title">
        <span class="page-title-icon">
            <i class="bi bi-receipt"></i>
        </span>
        Todas las Órdenes
    </h1>
    <a href="@Url.Action("Dashboard", "Admin")" class="btn-back">
        <i class="bi bi-arrow-left"></i> Volver al Dashboard
    </a>
</div>

<div class="stats-row">
    <div class="stat-badge total">
        <span class="stat-badge-label">Total Órdenes</span>
        <span class="stat-badge-value">@Model.Count</span>
    </div>
    <div class="stat-badge completadas">
        <span class="stat-badge-label">Completadas</span>
        <span class="stat-badge-value">@Model.Count(o => o.Estado == "Completada" || o.Estado == "Confirmado")</span>
    </div>
    <div class="stat-badge pendientes">
        <span class="stat-badge-label">Pendientes</span>
        <span class="stat-badge-value">@Model.Count(o => o.Estado == "Pendiente")</span>
    </div>
    <div class="stat-badge ingresos">
        <span class="stat-badge-label">Ingresos Totales</span>
        <span class="stat-badge-value">S/ @Model.Sum(o => o.Total).ToString("N2")</span>
    </div>
</div>

<div class="table-card">
    <div class="table-header">
        <span class="table-title">
            <i class="bi bi-list-ul"></i> Listado de órdenes
        </span>
        <div class="search-box">
            <i class="bi bi-search"></i>
            <input type="text" id="searchInput" placeholder="Buscar orden..." onkeyup="filterTable()">
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-wrapper">
            <table class="table" id="ordersTable">
                <thead>
                    <tr>
                        <th>Orden</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orden in Model.OrderByDescending(o => o.Fecha))
                    {
                        string inicial = !string.IsNullOrEmpty(orden.Usuario?.Nombre) && orden.Usuario.Nombre.Length > 0 
                            ? orden.Usuario.Nombre.Substring(0, 1).ToUpper() 
                            : "?";
                        
                        string statusClass = orden.Estado switch
                        {
                            "Completada" => "status-completada",
                            "Confirmado" => "status-completada",
                            "Pendiente" => "status-pendiente",
                            "Cancelada" => "status-cancelada",
                            _ => "status-completada"
                        };

                        string statusIcon = orden.Estado switch
                        {
                            "Completada" => "bi-check-circle-fill",
                            "Confirmado" => "bi-check-circle-fill",
                            "Pendiente" => "bi-clock-fill",
                            "Cancelada" => "bi-x-circle-fill",
                            _ => "bi-circle-fill"
                        };

                        <tr data-order-id="@orden.IdOrden">
                            <td><span class="order-id">#@orden.IdOrden</span></td>
                            <td>
                                <div class="client-cell">
                                    <div class="client-avatar">@inicial</div>
                                    <div class="client-info">
                                        <span class="client-name">@(orden.Usuario?.Nombre ?? "No especificado")</span>
                                        <span class="client-email">@(orden.Usuario?.Email ?? "-")</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="date-cell">
                                    <div class="date-primary">@orden.Fecha.ToString("dd MMM yyyy")</div>
                                    <div class="date-secondary">@orden.Fecha.ToString("HH:mm") hrs</div>
                                </div>
                            </td>
                            <td><span class="amount">S/ @orden.Total.ToString("F2")</span></td>
                            <td>
                                <span class="status-badge @statusClass">
                                    <i class="bi @statusIcon"></i> @orden.Estado
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("DetailsMyOrder", "Orden", new { id = orden.IdOrden })" class="btn-action btn-view">
                                        <i class="bi bi-eye"></i> Ver
                                    </a>
                                    @if (orden.Estado == "Pendiente")
                                    {
                                        <form asp-action="ConfirmOrder" asp-route-id="@orden.IdOrden" method="post" class="d-inline m-0 confirm-form">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn-action btn-confirm">
                                                <span class="btn-text"><i class="bi bi-check-lg"></i> Confirmar</span>
                                                <span class="btn-loading"><span class="spinner"></span> Enviando...</span>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h4>No hay órdenes registradas</h4>
            <p>Las órdenes aparecerán aquí cuando los clientes realicen compras.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Close alert function
        function closeAlert(id) {
            const alert = document.getElementById(id);
            if (alert) {
                alert.classList.add('hiding');
                setTimeout(() => alert.remove(), 300);
            }
        }

        // Auto close alerts after 8 seconds
        setTimeout(() => {
            document.querySelectorAll('.alert-toast').forEach(alert => {
                alert.classList.add('hiding');
                setTimeout(() => alert.remove(), 300);
            });
        }, 8000);

        // Filter table
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('ordersTable');
            if (!table) return;
            
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const cells = rows[i].getElementsByTagName('td');
                let found = false;

                for (let j = 0; j < cells.length; j++) {
                    const cellText = cells[j].textContent || cells[j].innerText;
                    if (cellText.toLowerCase().indexOf(filter) > -1) {
                        found = true;
                        break;
                    }
                }

                rows[i].style.display = found ? '' : 'none';
            }
        }

        // Add loading state to confirm buttons
        document.querySelectorAll('.confirm-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const btn = this.querySelector('.btn-confirm');
                if (btn) {
                    btn.classList.add('loading');
                    btn.disabled = true;
                }
            });
        });
    </script>
}