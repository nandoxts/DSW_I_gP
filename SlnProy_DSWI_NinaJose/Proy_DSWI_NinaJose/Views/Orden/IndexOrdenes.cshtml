@model List<Proy_DSWI_NinaJose.Models.Orden>
@{
    ViewData["Title"] = "Mis Órdenes";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th># Orden</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.IdOrden</td>
                <td>@o.Fecha.ToString("g")</td>
                <td>S/ @o.Total.ToString("F2")</td>
                <td>@o.Estado</td>
                <td>
                    <a asp-action="Confirmation" asp-route-id="@o.IdOrden"
                       class="btn btn-sm btn-outline-primary">
                        Ver detalle
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
