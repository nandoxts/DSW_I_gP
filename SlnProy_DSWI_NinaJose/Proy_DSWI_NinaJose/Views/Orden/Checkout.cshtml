@model List<Proy_DSWI_NinaJose.Models.Carrito>
@{
    ViewData["Title"] = "Revisar pedido";
    Layout = "_Layout";
}

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-card-checklist me-2"></i>@ViewData["Title"]</h2>

    <div class="table-responsive mb-3">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Producto</th>
                    <th class="text-center">Cantidad</th>
                    <th class="text-end">Precio unitario</th>
                    <th class="text-end">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td class="text-center">@item.Cantidad</td>
                        <td class="text-end">S/ @item.Precio.ToString("F2")</td>
                        <td class="text-end">S/ @item.Subtotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-end">Total:</th>
                    <th class="text-end">S/ @Model.Sum(i => i.Subtotal).ToString("F2")</th>
                </tr>
            </tfoot>
        </table>
    </div>

    <form asp-controller="Orden"
          asp-action="CheckoutPost"
          method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-cash-stack me-1"></i>Confirmar y Pagar
        </button>
        <a asp-controller="Carrito"
           asp-action="IndexCarrito"
           class="btn btn-outline-secondary btn-lg ms-2">
            <i class="bi bi-arrow-left-circle me-1"></i>Volver al carrito
        </a>
    </form>
</div>
