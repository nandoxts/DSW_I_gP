@using Proy_DSWI_NinaJose.Extensions
@using Proy_DSWI_NinaJose.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var sessionCart = Context.Session.GetObject<List<Carrito>>("Carrito") ?? new List<Carrito>();
    var initialCount = sessionCart.Sum(c => c.Cantidad);
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? string.Empty;
    var userEmail = User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? string.Empty;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – MiTienda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Producto" asp-action="IndexProductos">MiTienda</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="IndexProductos">Productos</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Panel Admin</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="Carrito" asp-action="IndexCarrito">
                            <i class="bi bi-cart3"></i>
                            <span id="cartCountBadge" class="badge bg-primary ms-2" style="display:@(initialCount>0?"inline-block":"none")">@initialCount</span>
                        </a>
                    </li>
                    @if (isAuth)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="javascript:void(0)" id="profileMenu" role="button" aria-expanded="false" onclick="toggleProfileDropdown(event)">
                                <span class="rounded-circle bg-primary text-white d-inline-flex align-items-center justify-content-center me-2" style="width:34px;height:34px;font-weight:600;">@((!string.IsNullOrEmpty(userName) && userName.Length>0)? userName.Substring(0,1).ToUpper() : "U")</span>
                                <span class="d-none d-md-inline">@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileMenu">
                                <li class="dropdown-item-text"><strong>@userName</strong><br /><small class="text-muted">@userEmail</small></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="javascript:void(0)" onclick="showProfile()">Perfil</a></li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Cerrar sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)" onclick="showLoginModal()">Ingresar</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Iniciar sesión</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="loginValidation" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="loginEmail" name="Email" type="email" class="form-control" autocomplete="email" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input id="loginPassword" name="Password" type="password" class="form-control" autocomplete="current-password" />
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-link p-0" onclick="showRegisterModal()">Regístrate</button>
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="regForm" asp-controller="Account" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Registrarse</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="regValidation" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input id="regNombre" name="Nombre" type="text" class="form-control" autocomplete="name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="regEmail" name="Email" type="email" class="form-control" autocomplete="email" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input id="regPassword" name="Password" type="password" class="form-control" autocomplete="new-password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar Contraseña</label>
                            <input id="regConfirm" name="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Crear cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function closeAllModals() {
            document.querySelectorAll('.modal.show').forEach(function (el) {
                var inst = bootstrap.Modal.getInstance(el);
                if (inst) inst.hide();
            });
        }

        function showDetails(url) {
            closeAllModals();
            fetch(url).then(r => r.ok ? r.text() : Promise.reject()).then(function (html) {
                var cont = document.querySelector('#detallesModal .modal-body');
                if (cont) cont.innerHTML = html;
                new bootstrap.Modal(document.getElementById('detallesModal')).show();
            });
        }

        function showProfile() {
            closeAllModals();
            fetch('@Url.Action("Profile", "Profile")').then(r => r.ok ? r.text() : Promise.reject()).then(function (html) {
                var cont = document.getElementById('perfilModalBody');
                if (cont) cont.innerHTML = html;
                new bootstrap.Modal(document.getElementById('perfilModal')).show();
            });
        }

        function showLoginModal() { closeAllModals(); new bootstrap.Modal(document.getElementById('loginModal')).show(); }
        function showRegisterModal() { closeAllModals(); new bootstrap.Modal(document.getElementById('registerModal')).show(); }

        // NOTE: handler for .index-add-btn moved to view-specific scripts (IndexProductos.js/IndexProductos.cshtml)
        // to avoid duplicate submissions. Keep detailAddBtn and form handlers here.

        $(document).on('submit', '#loginForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize()).done(function (res) {
                if (res.success) location.reload(); else $('#loginValidation').html(res.errors.join('<br/>'));
            }).fail(function () { $('#loginValidation').text('Error en el servidor.'); });
        });

        $(document).on('submit', '#regForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize()).done(function (res) {
                if (res.success) location.reload(); else $('#regValidation').html(res.errors.join('<br/>'));
            }).fail(function () { $('#regValidation').text('Error en el servidor.'); });
        });

        $(document).on('click', '#detailAddBtn', function () {
            var id = $(this).data('id');
            var qty = parseInt($('#detailQty').val(), 10) || 1;
            var token = $('#detailForm input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("AddToCart", "Carrito")', { __RequestVerificationToken: token, id: id, cantidad: qty })
                .done(function (res) {
                    $('#cartCountBadge').text(res.newCount).removeClass('d-none');
                    $('#detallesModal').modal('hide');
                    $('#addCartAlert').removeClass('d-none');
                    setTimeout(function () { $('#addCartAlert').addClass('d-none'); }, 1500);
                }).fail(function () { alert('Error al añadir al carrito desde detalles'); });
        });

        // Custom dropdown control for profile (no Bootstrap JS required)
        function toggleProfileDropdown(e) {
            e.preventDefault();
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var menu = toggle.nextElementSibling;
            var parent = toggle.closest('.nav-item.dropdown');
            var expanded = toggle.getAttribute('aria-expanded') === 'true';
            if (parent) parent.classList.toggle('show');
            if (menu) menu.classList.toggle('show');
            toggle.setAttribute('aria-expanded', (!expanded).toString());
        }

        function closeProfileDropdown() {
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var menu = toggle.nextElementSibling;
            var parent = toggle.closest('.nav-item.dropdown');
            if (parent) parent.classList.remove('show');
            if (menu) menu.classList.remove('show');
            toggle.setAttribute('aria-expanded', 'false');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function (ev) {
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var parent = toggle.closest('.nav-item.dropdown');
            if (!parent) return;
            if (!parent.contains(ev.target)) closeProfileDropdown();
        });

        // Close on ESC
        document.addEventListener('keydown', function (ev) {
            if (ev.key === 'Escape' || ev.key === 'Esc') closeProfileDropdown();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>