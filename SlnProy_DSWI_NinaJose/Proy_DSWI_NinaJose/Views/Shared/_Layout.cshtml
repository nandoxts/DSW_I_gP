@using Proy_DSWI_NinaJose.Extensions
@using Proy_DSWI_NinaJose.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    // Lee carrito de sesión para badge
    var sessionCart = Context.Session.GetObject<List<Carrito>>("Carrito") ?? new List<Carrito>();
    var initialCount = sessionCart.Sum(c => c.Cantidad);

    // Detecta si estamos en la vista Carrito/IndexCarrito
    var ctrl = ViewContext.RouteData.Values["Controller"]?.ToString();
    var act = ViewContext.RouteData.Values["Action"]?.ToString();
    bool enCarrito = string.Equals(ctrl, "Carrito", StringComparison.OrdinalIgnoreCase)
                  && string.Equals(act, "IndexCarrito", StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – MiTienda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Producto" asp-action="IndexProductos">
                <img src="~/productos_catalogo/LogoTienda.png"
                    alt="MiTienda"
                        style="height:60px; margin-right:0.5rem; object-fit:contain;" />
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto align-items-center">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item me-2">
                            <button class="btn btn-outline-primary" onclick="showLoginModal()">Iniciar sesión</button>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-outline-secondary" onclick="showRegisterModal()">Registrarse</button>
                        </li>
                    }
                    else
                    {
                        @if (User.IsInRole("Cliente") && !enCarrito)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-success position-relative"
                                   asp-controller="Carrito" asp-action="IndexCarrito">
                                    <i class="bi bi-cart-fill fs-4"></i>
                                    <span id="cartCountBadge"
                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger @(initialCount == 0 ? "d-none" : "")">
                                        @initialCount
                                    </span>
                                </a>
                            </li>
                        }


                        @* Mi perfil *@
                        <li class="nav-item ms-3">
                            <button class="btn btn-link nav-link" onclick="showProfile()">
                                <i class="bi bi-person-circle me-1"></i> Mi perfil
                            </button>
                        </li>

                        @* Panel de Admin *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-shield-lock me-1"></i> Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2"></i> Dashboard
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Usuario" asp-action="IndexUsuario">
                                        <i class="bi bi-people"></i> Gestionar Usuarios
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Orden" asp-action="IndexOrdenesAdmin">
                                        <i class="bi bi-receipt"></i> Todas las Órdenes
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Producto" asp-action="IndexProductos">
                                        <i class="bi bi-box"></i> Productos
                                    </a></li>
                                </ul>
                            </li>
                        }

                        @* Órdenes/Mis órdenes *@
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orden" asp-action="MyOrders">
                                    <i class="bi bi-bag-check me-1"></i> Mis órdenes
                                </a>
                            </li>
                        }

                        @* Cerrar sesión *@
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-link nav-link">
                                    <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                                </button>
                            </form>
                        </li>


                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <div id="addCartAlert"
         class="alert alert-success position-fixed top-0 end-0 m-3 py-2 px-3 d-none"
         role="alert">
        Producto añadido al carrito
    </div>

    <!-- Detalles Modal -->
    <div class="modal fade" id="detallesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalles del producto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

    <!-- Perfil Modal -->
    <div class="modal fade" id="perfilModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mi Perfil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="perfilModalBody"></div>
            </div>
        </div>
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Iniciar sesión</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="loginValidation" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="loginEmail" name="Email" type="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input id="loginPassword" name="Password" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-link p-0" onclick="showRegisterModal()">Regístrate</button>
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="regForm" asp-controller="Account" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title">Registrarse</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="regValidation" class="text-danger mb-3"></div>
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input id="regNombre" name="Nombre" type="text" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="regEmail" name="Email" type="email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input id="regPassword" name="Password" type="password" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar Contraseña</label>
                            <input id="regConfirm" name="ConfirmPassword" type="password" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Crear cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function closeAllModals() {
            document.querySelectorAll('.modal.show')
                .forEach(el => bootstrap.Modal.getInstance(el)?.hide());
        }

        function showDetails(url) {
            closeAllModals();
            fetch(url)
                .then(r => r.ok ? r.text() : Promise.reject())
                .then(html => {
                    document.querySelector('#detallesModal .modal-body').innerHTML = html;
                    new bootstrap.Modal('#detallesModal').show();
                });
        }

        function showProfile() {
            closeAllModals();
            fetch('@Url.Action("Profile", "Profile")')
                .then(r => r.ok ? r.text() : Promise.reject())
                .then(html => {
                    document.getElementById('perfilModalBody').innerHTML = html;
                    new bootstrap.Modal('#perfilModal').show();
                });
        }

        function showLoginModal() {
            closeAllModals();
            new bootstrap.Modal('#loginModal').show();
        }

        function showRegisterModal() {
            closeAllModals();
            new bootstrap.Modal('#registerModal').show();
        }

        // Añadir al carrito
        $(document).on('click', '.index-add-btn', function () {
            var id = $(this).data('id'),
                token = $('input[name="__RequestVerificationToken"]').first().val();
            $.post('@Url.Action("AddToCart", "Carrito")',
                { __RequestVerificationToken: token, id: id, cantidad: 1 })
                .done(function (res) {
                    $('#addCartAlert').removeClass('d-none');
                    setTimeout(() => $('#addCartAlert').addClass('d-none'), 1500);
                    $('#cartCountBadge').text(res.newCount).removeClass('d-none');
                });
        });

        // LOGIN AJAX
        $(document).on('submit', '#loginForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize())
                .done(function (res) {
                    if (res.success) location.reload();
                    else $('#loginValidation').html(res.errors.join('<br/>'));
                })
                .fail(function () { $('#loginValidation').text('Error en el servidor.'); });
        });

        // REGISTER AJAX
        $(document).on('submit', '#regForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize())
                .done(function (res) {
                    if (res.success) location.reload();
                    else $('#regValidation').html(res.errors.join('<br/>'));
                })
                .fail(function () { $('#regValidation').text('Error en el servidor.'); });
        });
    </script>

    <script>
        // … código existente para index-add-btn …

        // === Captura el click en el botón del modal de detalles ===
        $(document).on('click', '#detailAddBtn', function () {
            var id = $(this).data('id');
            var qty = parseInt($('#detailQty').val(), 10) || 1;
            var token = $('#detailForm input[name="__RequestVerificationToken"]').val();

            $.post(
                '@Url.Action("AddToCart", "Carrito")',
                { __RequestVerificationToken: token, id: id, cantidad: qty }
            )
                .done(function (res) {
                    // 1) Actualiza el badge global
                    $('#cartCountBadge')
                        .text(res.newCount)
                        .removeClass('d-none');

                    // 2) Cierra el modal de detalles
                    $('#detallesModal').modal('hide');

                    // 3) Muestra la alerta
                    $('#addCartAlert').removeClass('d-none');
                    setTimeout(function () {
                        $('#addCartAlert').addClass('d-none');
                    }, 1500);
                })
                .fail(function () {
                    alert('Error al añadir al carrito desde detalles');
                });
        });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
