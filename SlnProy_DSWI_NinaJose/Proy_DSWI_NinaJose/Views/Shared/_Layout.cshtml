@using Proy_DSWI_NinaJose.Extensions
@using Proy_DSWI_NinaJose.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    var sessionCart = Context.Session.GetObject<List<Carrito>>("Carrito") ?? new List<Carrito>();
    var initialCount = sessionCart.Sum(c => c.Cantidad);
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userName = User?.Identity?.Name ?? string.Empty;
    var userEmail = User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? string.Empty;
    var isAdmin = User?.IsInRole("Admin") ?? false;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] – MiTienda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --primary: #4f46e5;
            --primary-hover: #4338ca;
            --primary-light: #eef2ff;
            --success: #10b981;
            --success-hover: #059669;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-700: #374151;
            --gray-900: #111827;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            --radius: 0.5rem;
            --radius-lg: 0.75rem;
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        }

        body {
            background-color: var(--gray-50);
            color: var(--gray-700);
            min-height: 100vh;
        }

        /* Navbar */
        .navbar-custom {
            background: #fff;
            border-bottom: 1px solid var(--gray-200);
            padding: 0.75rem 0;
            box-shadow: var(--shadow-sm);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.35rem;
            color: var(--gray-900) !important;
            letter-spacing: -0.025em;
        }

        .navbar-brand:hover {
            color: var(--primary) !important;
        }

        .nav-link {
            color: var(--gray-500) !important;
            font-weight: 500;
            font-size: 0.9rem;
            padding: 0.5rem 1rem !important;
            border-radius: var(--radius);
            transition: all 0.15s ease;
        }

        .nav-link:hover {
            color: var(--gray-900) !important;
            background: var(--gray-100);
        }

        /* Cart Icon */
        .cart-link {
            position: relative;
            padding: 0.5rem 0.75rem !important;
        }

        .cart-link i {
            font-size: 1.25rem;
            color: var(--gray-700);
        }

        .cart-badge {
            position: absolute;
            top: 2px;
            right: 2px;
            background: var(--primary);
            color: #fff;
            font-size: 0.65rem;
            font-weight: 600;
            min-width: 18px;
            height: 18px;
            border-radius: 9px;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 5px;
        }

        /* User Avatar */
        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--primary), #7c3aed);
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
            margin-right: 0.5rem;
            box-shadow: var(--shadow-sm);
        }

        /* Site logo (header) */
        .site-logo {
            width: 36px;
            height: 36px;
            object-fit: contain;
            border-radius: 6px;
        }

        /* Dropdown */
        .dropdown-menu {
            border: 1px solid var(--gray-200);
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
            padding: 0.5rem;
            min-width: 220px;
            animation: dropdownFade 0.15s ease;
        }

        @@keyframes dropdownFade {
            from { opacity: 0; transform: translateY(-8px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .dropdown-item {
            border-radius: var(--radius);
            padding: 0.6rem 0.875rem;
            font-size: 0.875rem;
            color: var(--gray-700);
            transition: all 0.15s ease;
        }

        .dropdown-item:hover {
            background: var(--gray-100);
            color: var(--gray-900);
        }

        .dropdown-item-text {
            padding: 0.75rem 0.875rem;
        }

        .dropdown-divider {
            margin: 0.25rem 0;
            border-color: var(--gray-200);
        }

        /* Buttons */
        .btn-primary {
            background: var(--primary);
            border-color: var(--primary);
            font-weight: 500;
            padding: 0.6rem 1.25rem;
            border-radius: var(--radius);
            transition: all 0.15s ease;
        }

        .btn-primary:hover {
            background: var(--primary-hover);
            border-color: var(--primary-hover);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .btn-success {
            background: var(--success);
            border-color: var(--success);
            font-weight: 500;
            padding: 0.6rem 1.25rem;
            border-radius: var(--radius);
            transition: all 0.15s ease;
        }

        .btn-success:hover {
            background: var(--success-hover);
            border-color: var(--success-hover);
            transform: translateY(-1px);
            box-shadow: var(--shadow-md);
        }

        .btn-link {
            color: var(--primary);
            text-decoration: none;
            font-weight: 500;
        }

        .btn-link:hover {
            color: var(--primary-hover);
            text-decoration: underline;
        }

        /* Modals */
        .modal-content {
            border: none;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-lg);
        }

        .modal-header {
            border-bottom: 1px solid var(--gray-200);
            padding: 1.25rem 1.5rem;
        }

        .modal-title {
            font-weight: 600;
            color: var(--gray-900);
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid var(--gray-200);
            padding: 1rem 1.5rem;
        }

        .btn-close {
            opacity: 0.5;
            transition: opacity 0.15s;
        }

        .btn-close:hover {
            opacity: 1;
        }

        /* Form Controls */
        .form-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--gray-700);
            margin-bottom: 0.4rem;
        }

        .form-control {
            border: 1px solid var(--gray-200);
            border-radius: var(--radius);
            padding: 0.65rem 0.875rem;
            font-size: 0.9rem;
            transition: all 0.15s ease;
        }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px var(--primary-light);
        }

        /* Main container */
        .main-container {
            padding-top: 1.5rem;
            padding-bottom: 3rem;
        }

        /* Admin Badge */
        .admin-link {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            color: #fff !important;
            font-weight: 500;
            font-size: 0.8rem;
            padding: 0.4rem 0.75rem !important;
            border-radius: 20px;
            margin-right: 0.5rem;
        }

        .admin-link:hover {
            background: linear-gradient(135deg, #d97706, #b45309);
            color: #fff !important;
        }

        /* Login text link */
        .login-link {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .login-link i {
            font-size: 1.1rem;
        }

        /* Validation Messages */
        .text-danger {
            font-size: 0.85rem;
        }

        /* Footer spacing fix */
        .container {
            flex: 1;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Producto" asp-action="IndexProductos">
                <img src="~/productos_catalogo/LogoTienda.png" alt="MiTienda" class="site-logo me-2" />
                <span style="font-weight:700; font-size:1.05rem; color:var(--gray-900);">MiTienda</span>
            </a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto align-items-center gap-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Producto" asp-action="IndexProductos">
                            <i class="bi bi-grid-3x3-gap me-1"></i> Productos
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link admin-link" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-shield-lock me-1"></i> Admin
                            </a>
                        </li>
                    }
                  @if (!User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            @if (isAuth)
                            {
                                <a class="nav-link d-flex align-items-center" asp-controller="Carrito" asp-action="IndexCarrito">
                                    <i class="bi bi-cart3"></i>
                                    <span id="cartCountBadge" class="badge bg-primary ms-2" style="display:@(initialCount > 0 ? "inline-block" : "none")">@initialCount</span>
                                </a>
                            }
                            else
                            {
                                <a class="nav-link d-flex align-items-center" href="javascript:void(0)" onclick="showLoginModal()">
                                    <i class="bi bi-cart3"></i>
                                    <span id="cartCountBadge" class="badge bg-primary ms-2" style="display:@(initialCount > 0 ? "inline-block" : "none")">@initialCount</span>
                                </a>
                            }
                        </li>
                    }
                    
                    @if (isAuth)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center py-1" href="javascript:void(0)" id="profileMenu" role="button" aria-expanded="false" onclick="toggleProfileDropdown(event)">
                                <span class="user-avatar">@((!string.IsNullOrEmpty(userName) && userName.Length > 0) ? userName.Substring(0, 1).ToUpper() : "U")</span>
                                <span class="d-none d-md-inline" style="font-weight: 500; color: var(--gray-700);">@userName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileMenu">
                                <li class="dropdown-item-text">
                                    <strong style="color: var(--gray-900);">@userName</strong>
                                    <br />
                                    <small class="text-muted">@userEmail</small>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="showProfile()">
                                        <i class="bi bi-person me-2"></i> Mi Perfil
                                    </a>
                                </li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link login-link" href="javascript:void(0)" onclick="showLoginModal()">
                                <i class="bi bi-person-circle"></i> Ingresar
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container main-container">
        @RenderBody()
    </div>

    <!-- Login Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="loginForm" asp-controller="Account" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <div>
                            <h5 class="modal-title mb-1">Bienvenido de nuevo</h5>
                            <p class="text-muted mb-0" style="font-size: 0.875rem;">Ingresa a tu cuenta para continuar</p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="loginValidation" class="alert alert-danger py-2 d-none"></div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="loginEmail" name="Email" type="email" class="form-control" placeholder="tu@email.com" autocomplete="email" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input id="loginPassword" name="Password" type="password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between align-items-center">
                        <span style="font-size: 0.875rem;">
                            ¿No tienes cuenta? 
                            <button type="button" class="btn btn-link p-0" onclick="showRegisterModal()">Regístrate</button>
                        </span>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="regForm" asp-controller="Account" asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <div>
                            <h5 class="modal-title mb-1">Crear cuenta</h5>
                            <p class="text-muted mb-0" style="font-size: 0.875rem;">Únete y disfruta de nuestros productos</p>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="regValidation" class="alert alert-danger py-2 d-none"></div>
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input id="regNombre" name="Nombre" type="text" class="form-control" placeholder="Tu nombre" autocomplete="name" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input id="regEmail" name="Email" type="email" class="form-control" placeholder="tu@email.com" autocomplete="email" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Contraseña</label>
                                <input id="regPassword" name="Password" type="password" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Confirmar</label>
                                <input id="regConfirm" name="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" autocomplete="new-password" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-person-plus me-1"></i> Crear cuenta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function closeAllModals() {
            document.querySelectorAll('.modal.show').forEach(function (el) {
                var inst = bootstrap.Modal.getInstance(el);
                if (inst) inst.hide();
            });
        }

        function showDetails(url) {
            closeAllModals();
            fetch(url).then(r => r.ok ? r.text() : Promise.reject()).then(function (html) {
                var cont = document.querySelector('#detallesModal .modal-body');
                if (cont) cont.innerHTML = html;
                new bootstrap.Modal(document.getElementById('detallesModal')).show();
            });
        }

        function showProfile() {
            closeAllModals();
            fetch('@Url.Action("Profile", "Profile")').then(r => r.ok ? r.text() : Promise.reject()).then(function (html) {
                var cont = document.getElementById('perfilModalBody');
                if (cont) cont.innerHTML = html;
                new bootstrap.Modal(document.getElementById('perfilModal')).show();
            });
        }

        function showLoginModal() { closeAllModals(); new bootstrap.Modal(document.getElementById('loginModal')).show(); }
        function showRegisterModal() { closeAllModals(); new bootstrap.Modal(document.getElementById('registerModal')).show(); }

        $(document).on('submit', '#loginForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize()).done(function (res) {
                if (res.success) location.reload(); 
                else {
                    $('#loginValidation').html(res.errors.join('<br/>')).removeClass('d-none');
                }
            }).fail(function () { 
                $('#loginValidation').text('Error en el servidor.').removeClass('d-none'); 
            });
        });

        $(document).on('submit', '#regForm', function (e) {
            e.preventDefault();
            var $f = $(this);
            $.post($f.attr('action'), $f.serialize()).done(function (res) {
                if (res.success) location.reload(); 
                else {
                    $('#regValidation').html(res.errors.join('<br/>')).removeClass('d-none');
                }
            }).fail(function () { 
                $('#regValidation').text('Error en el servidor.').removeClass('d-none'); 
            });
        });

        $(document).on('click', '#detailAddBtn', function () {
            var id = $(this).data('id');
            var qty = parseInt($('#detailQty').val(), 10) || 1;
            var token = $('#detailForm input[name="__RequestVerificationToken"]').val();
            $.post('@Url.Action("AddToCart", "Carrito")', { __RequestVerificationToken: token, id: id, cantidad: qty })
                .done(function (res) {
                    var badge = $('#cartCountBadge');
                    badge.text(res.newCount).css('display', 'flex');
                    $('#detallesModal').modal('hide');
                    $('#addCartAlert').removeClass('d-none');
                    setTimeout(function () { $('#addCartAlert').addClass('d-none'); }, 1500);
                }).fail(function () { alert('Error al añadir al carrito desde detalles'); });
        });

        function toggleProfileDropdown(e) {
            e.preventDefault();
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var menu = toggle.nextElementSibling;
            var parent = toggle.closest('.nav-item.dropdown');
            var expanded = toggle.getAttribute('aria-expanded') === 'true';
            if (parent) parent.classList.toggle('show');
            if (menu) menu.classList.toggle('show');
            toggle.setAttribute('aria-expanded', (!expanded).toString());
        }

        function closeProfileDropdown() {
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var menu = toggle.nextElementSibling;
            var parent = toggle.closest('.nav-item.dropdown');
            if (parent) parent.classList.remove('show');
            if (menu) menu.classList.remove('show');
            toggle.setAttribute('aria-expanded', 'false');
        }

        document.addEventListener('click', function (ev) {
            var toggle = document.getElementById('profileMenu');
            if (!toggle) return;
            var parent = toggle.closest('.nav-item.dropdown');
            if (!parent) return;
            if (!parent.contains(ev.target)) closeProfileDropdown();
        });

        document.addEventListener('keydown', function (ev) {
            if (ev.key === 'Escape' || ev.key === 'Esc') closeProfileDropdown();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>