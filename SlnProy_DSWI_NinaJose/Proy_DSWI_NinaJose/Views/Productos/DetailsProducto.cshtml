@model Proy_DSWI_NinaJose.Models.Producto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Imagen -->
            <div class="col-md-5 text-center p-3">
                <img src="@Model.ImagenUrl"
                     class="img-fluid rounded"
                     alt="@Model.Nombre"
                     onerror="this.onerror=null;this.src='/images/no-image.png';" />
            </div>

            <!-- Detalles -->
            <div class="col-md-7">
                <div class="card-body">
                    <h3 class="card-title">@Model.Nombre</h3>
                    <p class="text-muted mb-4">@Model.Descripcion</p>

                    <dl class="row">
                        <dt class="col-sm-4">Precio:</dt>
                        <dd class="col-sm-8 fs-5">S/ @Model.Precio.ToString("F2")</dd>

                        <dt class="col-sm-4">Stock:</dt>
                        <dd class="col-sm-8">@Model.Stock unidades</dd>

                        <dt class="col-sm-4">Categoría:</dt>
                        <dd class="col-sm-8">@Model.Categoria?.Nombre</dd>
                    </dl>

                    <!-- ─── Añadir al carrito ─────────────────────────── -->
                    @if (User.IsInRole("Cliente"))
                    {
                        <form id="detailCartForm">
                            @Html.AntiForgeryToken()
                            <div class="input-group input-group-sm mb-3" style="max-width:120px;">
                                <label class="input-group-text" for="detailQty">
                                    <i class="bi bi-basket2"></i>
                                </label>
                                <input id="detailQty"
                                       name="cantidad"
                                       type="number"
                                       class="form-control"
                                       value="1"
                                       min="1"
                                       max="@Model.Stock" />
                            </div>
                            <button type="button"
                                    id="detailAddBtn"
                                    class="btn btn-primary"
                                    data-id="@Model.IdProducto">
                                <i class="bi bi-cart-plus-fill me-1"></i> Añadir al carrito
                            </button>
                        </form>
                    }
                    else if (User.Identity.IsAuthenticated)
                    {
                        <span class="text-warning">No tienes permiso para comprar.</span>
                    }
                    else
                    {
                        <button type="button"
                                class="btn btn-outline-primary"
                                onclick="showLoginModal()">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar sesión
                        </button>
                    }

                    <!-- ─── Botones de Admin ──────────────────────────── -->
                    @if (User.IsInRole("Admin"))
                    {
                        <hr />
                        <div class="d-flex gap-2">
                            <a asp-controller="Producto"
                               asp-action="EditProducto"
                               asp-route-id="@Model.IdProducto"
                               class="btn btn-warning">
                                <i class="bi bi-pencil-fill me-1"></i> Editar
                            </a>

                            <!-- formulario independiente para eliminar -->
                            <form asp-controller="Producto"
                                  asp-action="DeleteProducto"
                                  asp-route-id="@Model.IdProducto"
                                  method="post"
                                  onsubmit="return confirm('¿Eliminar este producto?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash-fill me-1"></i> Eliminar
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Click en “Añadir al carrito” dentro del modal
        document.getElementById('detailAddBtn')?.addEventListener('click', function () {
            var id = this.getAttribute('data-id');
            var qty = parseInt(document.getElementById('detailQty').value) || 1;
            var token = document
                .querySelector('#detailCartForm input[name="__RequestVerificationToken"]')
                .value;

            fetch('@Url.Action("AddToCart", "Carrito")', {
                method: 'POST',
                headers: { 'RequestVerificationToken': token },
                body: new URLSearchParams({ id: id, cantidad: qty })
            })
                .then(res => {
                    if (!res.ok) throw new Error('Error servidor');
                    return res.json();
                })
                .then(json => {
                    // actualizar badge si lo tienes
                    document.getElementById('cartCountBadge')?.classList.remove('d-none');
                    document.getElementById('cartCountBadge').textContent = json.newCount;
                    // cerrar modal
                    bootstrap.Modal.getInstance(document.getElementById('detallesModal')).hide();
                    // alerta breve
                    var a = document.getElementById('addCartAlert');
                    a.classList.remove('d-none');
                    setTimeout(() => a.classList.add('d-none'), 1500);
                })
                .catch(err => alert(err.message));
        });
    </script>
}
