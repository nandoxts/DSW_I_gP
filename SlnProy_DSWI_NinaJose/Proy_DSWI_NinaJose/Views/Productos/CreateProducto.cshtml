@model Proy_DSWI_NinaJose.Models.Producto
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Crear Producto";
    Layout = "_Layout";
    // Asegúrate en el controlador de pasar ViewBag.Categorias como SelectList:
    // ViewBag.Categorias = new SelectList(_ctx.Categorias, "IdCategoria", "Nombre");
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateProducto" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="IdCategoria" class="form-label">Categoría</label>
        <select asp-for="IdCategoria"
                asp-items="ViewBag.Categorias"
                class="form-select">
            <option value="">-- Seleccionar --</option>
        </select>
        <span asp-validation-for="IdCategoria" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="ImagenUrl" class="form-label">URL Imagen</label>
        <input asp-for="ImagenUrl" class="form-control" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save me-1"></i> Guardar
        </button>
        <a asp-action="IndexProductos" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
