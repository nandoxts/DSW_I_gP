@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        // ===== CAROUSEL =====
        let currentSlide = 0;
        const track = document.getElementById('carouselTrack');
        const slides = document.querySelectorAll('.carousel-slide');
        const totalSlides = slides.length;

        function getVisibleSlides() {
            if (window.innerWidth < 768) return 1;
            if (window.innerWidth < 992) return 2;
            return 3;
        }

        function moveCarousel(direction) {
            const visibleSlides = getVisibleSlides();
            const maxSlide = Math.max(0, totalSlides - visibleSlides);

            currentSlide += direction;
            if (currentSlide < 0) currentSlide = maxSlide;
            if (currentSlide > maxSlide) currentSlide = 0;

            updateCarousel();
        }

        function updateCarousel() {
            if (!track || !slides.length) return;
            const slideWidth = slides[0].offsetWidth + 24; // width + gap
            track.style.transform = `translateX(-${currentSlide * slideWidth}px)`;
        }

        // Auto-slide
        let autoSlide = setInterval(() => moveCarousel(1), 5000);

        // Pause on hover
        if (track) {
            track.addEventListener('mouseenter', () => clearInterval(autoSlide));
            track.addEventListener('mouseleave', () => {
                autoSlide = setInterval(() => moveCarousel(1), 5000);
            });
        }

        // Resize handler
        window.addEventListener('resize', updateCarousel);

        // ===== CARGA AJAX CON AXIOS (sin refresh completo) =====
        (function(){
            const partialUrl = '@Url.Action("IndexProductosPartial", "Producto")';

            function setActiveTab(category) {
                document.querySelectorAll('.category-tab').forEach(t => {
                    if ((t.dataset.category || 'all').toLowerCase() === (category || 'all').toLowerCase()) {
                        t.classList.add('active');
                    } else {
                        t.classList.remove('active');
                    }
                });
            }

            function loadProducts(opts){
                const category = opts.category || 'all';
                const page = opts.page || 1;
                axios.get(partialUrl, { params: { category, page } })
                .then(resp => {
                    const container = document.getElementById('productListContainer');
                    if (container) container.innerHTML = resp.data;
                    setActiveTab(category);
                    // scroll to products area
                    const top = container ? container.getBoundingClientRect().top + window.scrollY - 120 : 0;
                    window.scrollTo({ top, behavior: 'smooth' });
                })
                .catch(err => {
                    console.error('Error cargando productos:', err);
                });
            }

            // Click en tabs de categoría -> carga parcial
            document.querySelectorAll('.category-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    const category = this.dataset.category || 'all';
                    loadProducts({ category, page: 1 });
                });
            });

            // Interceptar clicks en la paginación generada por PagedList
            document.addEventListener('click', function(e){
                const a = e.target.closest('.pagination a');
                if (!a) return;
                e.preventDefault();
                try {
                    const url = new URL(a.href);
                    const category = url.searchParams.get('category') || 'all';
                    const page = url.searchParams.get('page') || 1;
                    loadProducts({ category, page });
                } catch (ex) {
                    // fallback: recarga
                    window.location.href = a.href;
                }
            });

            // Inicial: mantener la pestaña activa según querystring
            (function(){
                const params = new URLSearchParams(window.location.search);
                const currentCategory = (params.get('category') || 'all').toLowerCase();
                setActiveTab(currentCategory);
            })();
        })();

        // ===== TOAST NOTIFICATION =====
        function showToast(message) {
            const toast = document.getElementById('cartToast');
            toast.querySelector('span').textContent = message;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // ===== ADD TO CART =====
        document.addEventListener('click', function(e) {
            const btn = e.target.closest('.index-add-btn');
            if (!btn) return;

            const id = btn.getAttribute('data-id');
            const cantidad = 1;
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';

            const formData = new FormData();
            formData.append('__RequestVerificationToken', token);
            formData.append('id', id);
            formData.append('cantidad', cantidad);

            // Add loading state
            btn.disabled = true;
            const originalContent = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i>';

            fetch('@Url.Action("AddToCart", "Carrito")', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    return response.text().then(text => { throw new Error(text); });
                }
                return response.json();
            })
            .then(json => {
                if (json.success) {
                    showToast('¡Producto añadido al carrito!');
                    const badge = document.getElementById('cartCountBadge');
                    if (badge) {
                        badge.textContent = json.newCount;
                        badge.style.display = 'flex';
                    }
                } else {
                    throw new Error('Error inesperado');
                }
            })
            .catch(err => {
                console.error(err);
                showToast('Error al añadir al carrito');
            })
            .finally(() => {
                btn.disabled = false;
                btn.innerHTML = originalContent;
            });
        });

        // Fade-in animation
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes fadeIn {
                from { opacity: 0; transform: translateY(10px); }
                to { opacity: 1; transform: translateY(0); }
            }
        `;
        document.head.appendChild(style);
    </script>
}