<!-- Productos Destacados / Más Vendidos - Carousel -->
@if (Model.Destacados.Any())
{
    <section class="carousel-section">
        <div class="section-header">
            <h2 class="section-title">
                <span class="section-title-icon"><i class="bi bi-fire"></i></span>
                Más Vendidos
            </h2>
            <div class="carousel-controls">
                <button class="carousel-btn" id="prevBtn" onclick="moveCarousel(-1)">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="carousel-btn" id="nextBtn" onclick="moveCarousel(1)">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>

        <div class="carousel-container">
            <div class="carousel-track" id="carouselTrack">
                @foreach (var p in Model.Destacados)
                {
                    var cantidadVendida = p.OrdenDetalles?.Sum(od => od.Cantidad) ?? 0;
                    <div class="carousel-slide">
                        <div class="featured-card">
                            <div class="featured-card-image">
                                <img src="@p.ImagenUrl" alt="@p.Nombre" onerror="this.onerror=null;this.src='/images/no-image.svg';" />
                                <span class="featured-badge">
                                    <i class="bi bi-trophy-fill"></i> Top Ventas
                                </span>
                                @if (cantidadVendida > 0)
                                {
                                    <span class="sold-count">@cantidadVendida vendidos</span>
                                }
                            </div>
                            <div class="featured-card-body">
                                <span class="featured-card-category">@(p.Categoria?.Nombre ?? "Sin categoría")</span>
                                <h3 class="featured-card-title">@p.Nombre</h3>
                                <p class="featured-card-desc">@p.Descripcion</p>
                                <div class="featured-card-footer">
                                    <div class="featured-price">
                                        S/ @p.Precio.ToString("F2")
                                    </div>
                                    <div class="featured-actions">
                                        <button class="btn-icon" onclick="showDetails('@Url.Action("DetailsProducto","Producto", new { id = p.IdProducto })')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        @if (!User.Identity.IsAuthenticated)
                                        {
                                            <button class="btn-icon primary" onclick="showLoginModal()">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        }
                                        else if (User.IsInRole("Cliente"))
                                        {
                                            <button class="btn-icon primary index-add-btn" data-id="@p.IdProducto">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

